<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/worldName" android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:editable="false"
            android:textSize="30dp"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventList"
            tools:listitem="@android:layout/simple_list_item_1" android:headerDividersEnabled="false"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>

