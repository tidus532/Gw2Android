<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#DC241F" />

            <stroke
                android:color="#400A09"
                android:width="1dp"
                />

            <gradient
                android:angle="-90"
                android:startColor="#961815"
                android:endColor="#DC241F"
                />
            <corners
                android:radius="3dp"
            />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#DC241F" />

            <stroke
                android:color="#400A09"
                android:width="1dp"
            />

            <gradient
                android:angle="90"
                android:startColor="#961815"
                android:endColor="#DC241F"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
</selector>